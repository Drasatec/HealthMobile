<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DrasatHealthMobile.Views.BookingDetailsView"
    xmlns:kit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:font="clr-namespace:DrasatHealthMobile.Helpers"
    xmlns:template="clr-namespace:DrasatHealthMobile.Views.Templates"
    xmlns:vm="clr-namespace:DrasatHealthMobile.ViewModels"
    xmlns:help="clr-namespace:DrasatHealthMobile.Helpers"
    NavigationPage.HasNavigationBar="False"
    Shell.PresentationMode="ModalAnimated"
    FlowDirection="RightToLeft"
    BackgroundColor="{StaticResource White}"
    x:Name="this"
    Title="BookingDetailsView">
    <ScrollView>
        <Grid
            RowDefinitions="Auto,Auto,*">
            <!-- Hedar -->
            <template:BackButtonTemplate
                Title="صفحة تأكيد الحجز" />

            <!-- Status ##1##-->
            <StackLayout
                Grid.Row="1"
                Padding="20,25"
                BackgroundColor="{StaticResource Success}">
                <StackLayout
                    Orientation="Horizontal"
                    HorizontalOptions="Center"
                    Spacing="15">
                    <Label
                        Text="حالة الحجز"
                        Style="{StaticResource Title}"
                        TextColor="{StaticResource White}" />
                    <Label
                        Text="{x:Static font:IconFontMaterial.CheckCircle}"
                        FontFamily="{StaticResource IconFont}"
                        TextColor="{StaticResource White}"
                        VerticalOptions="Center"
                        FontSize="Title" />
                </StackLayout>
            </StackLayout>

            <!-- Content-->
            <VerticalStackLayout
                Grid.Row="2"
                Spacing="10"
                Padding="20,0">

                <!-- Doctor ##2## -->
                <StackLayout
                    Orientation="Horizontal"
                    Spacing="8">
                    <kit:AvatarView
                        ImageSource="doctor1"
                        Style="{StaticResource Avatar}" />
                    <Label
                        Text="د.محمد علاء الدين"
                        Style="{StaticResource SubTitle}" />
                </StackLayout>

                <!-- Hospital ##3## -->
                <StackLayout>
                    <!-- Hos Name -->
                    <Label
                        Style="{StaticResource SubTitle}"
                        Text="عيادة الرحمة الغربية" />
                    <StackLayout
                        Spacing="5"
                        Orientation="Horizontal">
                        <Label
                            Text="{x:Static font:IconFontMaterial.MapMarker}"
                            Style="{StaticResource Body}"
                            TextColor="{StaticResource Primary}"
                            FontFamily="{StaticResource IconFont}" />
                        <Label
                            Text="طنطا شارع الجيش"
                            Style="{StaticResource Body}" />
                    </StackLayout>
                </StackLayout>

                <!-- ##3## Name -->
                <StackLayout
                    Spacing="5">
                    <Label
                        Text="اسم المريض"
                        Style="{StaticResource SubTitle}" />
                    <Label
                        Text="يمنى زغلول المنزلاوي"
                        Style="{StaticResource Body}" />
                </StackLayout>

                <!-- ##4## Phone  -->
                <StackLayout
                    Spacing="5">
                    <Label
                        Text="الهاتف"
                        Style="{StaticResource SubTitle}" />
                    <Label
                        Text="012542165218"
                        Style="{StaticResource Body}" />
                </StackLayout>

                <!-- ##5## Visit Type -->
                <StackLayout
                    Spacing="5">
                    <Label
                        Text="نوع الكشف"
                        Style="{StaticResource SubTitle}" />
                    <Label
                        Text="كشف جديد"
                        Style="{StaticResource Body}" />
                </StackLayout>

                <!-- ##6## Clinic -->
                <StackLayout
                    Spacing="5">
                    <Label
                        Text="العيادة"
                        Style="{StaticResource SubTitle}" />
                    <Label
                        Text="النساء والتوليد"
                        Style="{StaticResource Body}" />
                </StackLayout>

                <!-- ##7## Date Visit -->
                <StackLayout
                    Spacing="10">
                    <Label
                        Text="تاريخ الحجز"
                        Style="{StaticResource SubTitle}" />
                    <Label
                        Text="الاثنين 6 مارس"
                        Style="{StaticResource Body}" />
                    <HorizontalStackLayout
                        Spacing="5">
                        <Label
                            Text="8:00 ص"
                            Style="{StaticResource Body}" />
                        <Label
                            Text="إلى"
                            Style="{StaticResource Body}" />
                        <Label
                            Text="2:00 م"
                            Style="{StaticResource Body}" />
                    </HorizontalStackLayout>
                </StackLayout>

                <!-- ##8##-->
                <Button
                    BackgroundColor="{StaticResource Danger}"
                    Text="إلغاء الحجز" />

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>