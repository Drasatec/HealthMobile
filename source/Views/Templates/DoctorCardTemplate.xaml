<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:kit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:font="clr-namespace:DrasatHealthMobile.Helpers"
    x:Class="DrasatHealthMobile.Views.Templates.DoctorCardTemplate"
    BackgroundColor="{StaticResource Background}">
    <VerticalStackLayout>
        <Frame
            HasShadow="True"
            BorderColor="Transparent"
            Margin="20,10"
            BackgroundColor="{StaticResource White}">
            <Frame.Shadow>
                <Shadow
                    Brush="{StaticResource Gray100}"
                    Offset="10,10" />
            </Frame.Shadow>

            <StackLayout
                Spacing="10"
                Orientation="Horizontal">
                <!-- AVATAR -->
                <kit:AvatarView
                    BorderColor="{StaticResource Gray50}"
                    CornerRadius="40"
                    WidthRequest="80"
                    HeightRequest="80"
                    ImageSource="doctor1"
                    Style="{StaticResource Avatar}"
                    VerticalOptions="Start" />
                <!-- CONTENT -->
                <StackLayout
                    Spacing="2"
                    HorizontalOptions="FillAndExpand">
                    <Label
                        Text="الدكتور محمد علاء الدين"
                        Style="{StaticResource SubTitle}" />
                    <Label 
                        Text="أخصائي النساء والتوليد"
                        Style="{StaticResource Body}"/>

                    <!-- Visit Price-->
                    <HorizontalStackLayout
                        Spacing="5">
                        <Label
                            Text="رسوم الكشف:"
                            Style="{StaticResource Body}" />
                        <Label
                            Text="300"
                            TextColor="{StaticResource Primary}"
                            Style="{StaticResource Body}" />
                        <Label
                            Text="فرنك"
                            Style="{StaticResource Body}" 
                        TextColor="{StaticResource Primary}" />
                    </HorizontalStackLayout>

                    <!-- STARS -->
                    <CollectionView>
                        <CollectionView.ItemsSource>
                            <x:Array
                                Type="{x:Type x:String}">
                                <x:String>mono</x:String>
                                <x:String>monodroid</x:String>
                                <x:String>monotouch</x:String>
                                <x:String>monorail</x:String>
                                <x:String>monodevelop</x:String>
                            </x:Array>
                        </CollectionView.ItemsSource>
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout
                                Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout>
                                    <Label
                                        FontSize="18"
                                        FontFamily="{StaticResource IconFont}"
                                        Text="{x:Static font:IconFontMaterial.Star}"
                                        TextColor="{StaticResource Yellow100Accent}"
                                        VerticalOptions="Center" />
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <!-- Button -->
                    <Button
                        HorizontalOptions="EndAndExpand"
                        VerticalOptions="Center"
                        HeightRequest="40"
                        Padding="30,0"
                        Margin="0"
                        Text="حجز" />
                </StackLayout>

            </StackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentView>
